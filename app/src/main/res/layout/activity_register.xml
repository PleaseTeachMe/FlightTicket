<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/btn_green_pressed"
    tools:context="com.zl.fiight.activity.RegisterActivity">
    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/login"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textCursorDrawable="@null"
    />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/pass"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textCursorDrawable="@null"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/et_passagain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/pass"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textCursorDrawable="@null"
        android:textSize="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/message"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textCursorDrawable="@null"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/bt_message"
            android:layout_width="0dp"
            style="@style/btmessage_bg_and_textcolor"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:text="获取验证码"
            android:textSize="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:clickable="false"
        style="@style/btn_bg_and_textcolor"
        android:text="注册"
        />
</LinearLayout>
